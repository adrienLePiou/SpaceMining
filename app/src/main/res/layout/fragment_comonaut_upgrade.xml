    android:layout_height="fill_parent"
    tools:context="com.alp.android.spacemining.ComonautUpgrade"
    android:background="#44000000"
    android:id="@+id/cosmonautUpgradeTag"
    android:orientation="vertical"
    android:padding="10dp">

